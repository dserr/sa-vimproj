<!-- 
This is my idea of a "minimal" project spec. Notice a couple of things:
1. The module dependencies are not explicitly specified. We should be able
to figure that out from MODULE_DEPENDENCIES
-->

<solution>
    <project name="stateflow"       path="toolbox/stateflow/src/stateflow"></project>
    <project name="dd"              path="toolbox/stateflow/src/dd"></project>
    <project name="sf_sfun"         path="toolbox/stateflow/src/sf_sfun"></project>

    <project name="sfc_sf"          path="stateflow/c/mex">
        <!-- this is a non-standard module because it needs to be invoked
        in a special manner -->
        <build>
            gmake -C src -f makemexlib.gmk MAKE_DEBUG=1
        </build>
    </project>

    <project name="cgir_xform"       path="src/cgir_xform"></project>
    <project name="cg_ir"            path="src/cg_ir"></project>
    <project name="rtwcg"            path="src/rtwcg"></project>
    <project name="simulink"         path="src/simulink"></project>
</solution>
